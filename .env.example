# =============================================================================
# NoteSnap Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/_/settings/api
# -----------------------------------------------------------------------------

# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase anonymous/public key (safe to expose in browser)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (NEVER expose in browser - server-side only)
# Used for admin operations that bypass Row Level Security
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# -----------------------------------------------------------------------------
# Anthropic (Claude) API Configuration
# Get your key from: https://console.anthropic.com/
# -----------------------------------------------------------------------------

# Anthropic API key for Claude AI image analysis
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# -----------------------------------------------------------------------------
# Application Configuration (Optional)
# -----------------------------------------------------------------------------

# Public URL of your deployed app (used for meta tags and redirects)
# In development, this defaults to http://localhost:3000
NEXT_PUBLIC_APP_URL=https://your-domain.com

# -----------------------------------------------------------------------------
# Development Options (Optional)
# -----------------------------------------------------------------------------

# Set to 'development' or 'production'
NODE_ENV=development
